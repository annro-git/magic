%h1 Cartes sans visuel
%hr

%ul.cards-list.classic
  - @cards.each do |card|
    .card{ class: "js-item-id-#{card.id} js-color js-rarity", 'data-colors' => (card.color_ids || []).join('-') }
      %span
        = link_to card.title(show_rarity: true), extension_set_card_path(slug: card.extension_set.slug, id: card.id), class: "card-link rarity-#{card.rarity}"
