.menu-container
  %nav.main-nav
    .nav-wrapper
      %ul
        %li.root-link
          = link_to root_path do
            = image_tag("logo.png", srcset: "#{image_path("logo.png")} 2x", width: 240, height: 60)
        %li= link_to 'Extensions', extension_sets_path
        %li= link_to 'Mtgjson.com', json_sets_path
      %ul
        - if current_user && user_signed_in?
          - if current_user.admin?
            %li
              = link_to 'Admin', admin_root_path

          %li= link_to 'Logout', destroy_user_session_path, method: :delete
        - elsif false
          %li= link_to 'Login', login_path
