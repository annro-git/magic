%h1
  Search :
  = "'#{@term}'"

%p= "#{@pagy.count} result(s)"

= render partial: 'pagy/nav', locals: { pagy: @pagy }
%table.table
  - @results.decorate.each do |card|
    %tr
      %td.col-md-6= card.title(show_rarity: true, show_extension: true)
      %td.col-md-2
        = show_mana_cost(card)
      %td.col-md-1
        = link_to 'Show', card_path(card.id), class: 'btn btn-primary btn-xs'

= render partial: 'pagy/nav', locals: { pagy: @pagy }
