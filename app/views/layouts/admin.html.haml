!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title Magic
    = csrf_meta_tags
    = csp_meta_tag
    = stylesheet_link_tag    'application', media: 'all'
    = javascript_include_tag 'application'
  %body
    = render partial: 'application/menu', locals: { admin_link: true }
    = render 'application/admin/menu'
    .container.main-container
      - if notice
        %p.notice= notice
      - if alert
        %p.alert= alert
      = yield
